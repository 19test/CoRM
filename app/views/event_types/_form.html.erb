<%= form_for(@eventtype, :html => { :class => "well "}) do |f| %>
  <% if @eventtype.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@eventtype.errors.count, "error") %> prohibited this type from being saved:</h2>

      <ul>
      <% @eventtype.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
     <div class="span2"> Libellé : </div> <%= f.text_field :label,{ :class => 'required', :style=>'width: 30em;'}  %>
  </div>
  
  <div class="field">
    <div class="span2"> Direction : </div> <%= f.text_field :direction , :style=>'width: 30em;'%>
  </div>
  
   <div class="row">
   	<%= if !@eventtype.id.nil? then f.submit 'Modifier ce Type', :class =>"btn btn-primary",:id =>"eventtype_validate_form" else f.submit 'Créer un Type', :class =>"btn btn-primary",:id =>"eventtype_validate_form" end%>
	<%= if !@eventtype.id.nil? then link_to image_tag("glyphicons/glyphicons_016_bin.png"),@eventtype,:title => "Supprimer le type", :confirm => 'Confirmer la suppression ?', :class =>"pull-right btn", :method => :delete end %> 
    </div>
  </div>
  
<% end %>
