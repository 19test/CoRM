<div class="container-fluid">
  
  <div class="page-header">
    <h1>Produit n°<%= @produit.id %> </h1>
  </div>

  <div class="well">
    <p id="notice"><%= notice %></p>
    
    <table class="table table-striped">
      <tbody>
        <tr>
          <td>  
            <div class="span2">
              <h3>Nom :</h3>
              <%= @produit.nom %></span>
            </div>
          </td>
        </tr>
    
        <tr>
          <td colspan="4">
            <h3>Description :</h3>
            <%= simple_format(@produit.description) %>
          </td>
        </tr>
      
        <tr>
          <td colspan="4">
              <h3>Créée par : </h3><%= @produit.created_by %><strong style="margin-left: 3em;"> Le : </strong><%= @produit.created_at.strftime("%d/%m/%y à %H:%M") %>
          </td>
        </tr>
        
        <% if !@produit.updated_by.nil? %>
        <tr>
          <td colspan="4">
              <h3>Modifiée par :</h3><%= @produit.updated_by %>
              <strong style="margin-left: 3em;"> Le : </strong><%= @produit.updated_at.strftime("%d/%m/%y à %H:%M") %>
          </td>
        </tr>
        <% end %>
     
        <tr>
          <td colspan="4">
            <div class="pull-left">
              <%= link_to image_tag("glyphicons/glyphicons_221_unshare.png"), :back %>
              <%= link_to image_tag("glyphicons/glyphicons_151_edit.png"), edit_produit_path(@produit) %>   
            </div>
            <div class="pull-right">
              <%= link_to image_tag("glyphicons/glyphicons_016_bin.png"), @produit, :confirm => 'Confirmer la suppression ?', :method => :delete %>
            </div>
          </td>
        </tr>
       </tbody>
    </table>
  </div>
</div>