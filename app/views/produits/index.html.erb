<div class="container-fluid" style="margin-top: 1em;">
  
  <table class="table table-bordered table-striped">
    <tr>
      <th>Nom</th>
      <th>Description</th>
      <th>Voir</th>
      <th>Editer</th>
    </tr>
  
  <% @produits.each do |produit| %>
    <tr>
      <td><%= produit.nom %></td>
      <td><%= truncate(produit.description, :length => 300, :separator => ' ')%></td>
      <td><%= link_to image_tag("glyphicons/glyphicons_029_notes_2.png"), produit %></td>
      <td><%= link_to image_tag("glyphicons/glyphicons_151_edit.png"), edit_produit_path(produit) %></td>
    </tr>
  <% end %>
  </table>
  
  <br />
  
  <%= paginate @produits %> <%= link_to image_tag("glyphicons/glyphicons_190_circle_plus.png"), new_produit_path %>
  
</div>