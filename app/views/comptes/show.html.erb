<div class="container-fluid">
  
  <div class="page-header">
    <h1>Compte n°<%= @compte.id %> </h1>
  </div>

  <div class="well">
    
    <table class="table table-striped">
      <tbody>
        <tr>
          <td colspan="5">
            <div class="span2">
              <h3>Société :</h3>
              <%= @compte.societe %>
            </div>
          </td>
        </tr>
        
        <tr>
          <td>
            <div class="span2">
              <h3> Adresse :</h3>
              <%= @compte.adresse1 %>
            </div>
          </td>
    
        <% if !@compte.adresse2.nil? %>
	  <td>
            <div class="span2">
              <h3>Adresse bis :</h3>
              <%= @compte.adresse2 %>
            </div>
          </td>
        <% end %>
         
         
          <td>
            <div class="span3">
              <h3>Ville :</h3>
               <%= @compte.ville %>
            </div>
          </td>
          
          <td>
            <div class="span2">
              <h3>Code postal :</h3>
               <%= @compte.cp %>
            </div>
          </td>
          
          <td>
            <div class="span2">
              <h3>Pays :</h3>
               <%= @compte.pays %>
            </div>
          </td>
         
        </tr>
        
        <tr>
          
          <td>
            <div class="span2">
              <h3>Téléphone :</h3>
              <%= @compte.tel %>
            </div>
          </td>
          
          <td>
            <div class="span2">
              <h3>Fax :</h3>
              <%= @compte.fax %>
            </div>
          </td>
          
          <td>
            <div class="span2">
              <h3>Email :</h3>
              <%=  mail_to(@compte.email) %>
            </div>
          </td>
          
          <td colspan="2">
            <div class="span2">
              <h3>Site web : </h3>
              <%= link_to @compte.web, @compte.web, :target => "_blank" %>
            </div>
          </td>
          
        </tr>
        
        <tr>
	  <% if !@compte.origine.nil? %>
          <td>
            <div class="span2">
              <h3>Origine : </h3>
              <%= @compte.origine.nom %>
            </div>
          </td>
	  <% end %>          

          <td>
            <div class="span2">
              <h3>Genre : </h3>
              <%= @compte.genre %>
            </div>
          </td>
          
          <td>
            <div class="span3">
              <h3>Code comptable : </h3>
              <%= @compte.code_compta %>
            </div>
          </td>
          
          <td colspan="2">
            <div class="span4">
              <h3>Collaborateur lié : </h3>
              <%= @compte.user.nom_complet %> : <%= mail_to(@compte.user.email) %>
            </div>
          </td>
          
        </tr>
        
        <% if !@compte.produits.blank? %>
        <tr>
          <td colspan="5">
            <h3>Produits liés au compte : </h3>
              <%= render "produits" %>
          </td>
          
        </tr>
	<% end %>
        
        <tr>
          <td colspan="5">
              <h3>Notes :</h3>
              <%= simple_format(@compte.notes) %>
          </td>
        </tr>
        
        <tr>
          <td colspan="5">
              <h3>Créé par : </h3><%= @compte.created_by %><strong style="margin-left: 3em;"> Le : </strong><%= @compte.created_at.strftime("%d/%m/%y à %H:%M") %>
          </td>
        </tr>
          
        <% if !@compte.modified_by.nil? %>
        <tr>
          <td colspan="5">
              <h3>Modifié par :</h3><%= @compte.modified_by %>
              <strong style="margin-left: 3em;"> Le : </strong><%= @compte.updated_at.strftime("%d/%m/%y à %H:%M") %>        
          </td>
        </tr>
      <% end %>
      
      <tr>
        <td colspan="5">
          <div class="pull-left">
            <%= link_to image_tag("glyphicons/glyphicons_221_unshare.png"), :back %>
            <%= link_to image_tag("glyphicons/glyphicons_151_edit.png"), edit_compte_path(@compte) %>
            <%= link_to '<i class="icon-folder-close icon-white"></i> Voir les événements du compte'.html_safe, compte_evenements_url(@compte), {:class => "btn btn-info btn-small", :style => " margin-left : 3em;"} %>
          </div>
          <div class="pull-right">
            <%= link_to image_tag("glyphicons/glyphicons_016_bin.png"), @compte, :confirm => 'Confirmer la suppression ?', :method => :delete %>
          </div>
        </td>
      </tr>
        
      </tbody>
    </table>
  </div>
</div>
