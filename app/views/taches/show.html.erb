<div class="container-fluid">
  
  <div class="page-header">
    <h1>Tâche n°<%= @tache.id %> </h1>
  </div>

  <div class="well">
    
    <table class="table table-striped">
      <tbody>
        <tr>
          <td>  
            <div class="span2">
              <h3>Statut :</h3>
              <% if @tache.statut == "A faire"%>
                <span class="badge badge-important">
              <% elsif @tache.statut == "En cours"%>
                <span class="badge badge-warning">
              <% elsif @tache.statut == "Terminé"%>
                <span class="badge badge-success">
              <% elsif @tache.statut == "Annulé"%>
                <span class="badge badge-inverse">
              <% else %>
                <span class="badge badge-info">
              <% end %>
              <%= @tache.statut %></span>
            </div>
          </td>
    
	  <td>
            <div class="span2">
              <h3> Compte :</h3>
              <%= if !@tache.compte.nil? then link_to @tache.compte.societe , @tache.compte end%>
            </div>
          </td>
    
          <% if !@tache.contact.nil? %>
          <td>
            <div class="span2">
              <h3> Contact :</h3>
              <%= link_to @tache.contact.nom_complet, @tache.contact %>
            </div>
          </td>
          <% end %>

          <td>
            <div class="span2">
              <h3>Echéance :</h3>
              <%= @tache.echeance.split('/').reverse!.join('/') %>
            </div>
          </td>
        </tr>
    
        <tr>
          <td colspan="4">
            <h3>Description :</h3>
            <%= simple_format(@tache.notes) %>
          </td>
        </tr>
    
        <% if @tache.fichier_joint.exists? %>
        <tr>
          <td colspan="4">
            <h3> Pièce jointe :</h3>
            <%= link_to (image_tag("glyphicons/glyphicons_036_file.png") + ' ' + @tache.fichier_joint_file_name), @tache.fichier_joint.url, :target => "_blank"%>
          </td>
        </tr>
        <% end %>
      
        <tr>
          <td colspan="4">
              <h3>Collaborateur : </h3><strong><%= @tache.user.nom_complet %></strong> : <%= mail_to(@tache.user.email) %>
          </td>
        </tr>
      
        <tr>
          <td colspan="4">
              <h3>Créée par : </h3><%= @tache.created_by %><strong style="margin-left: 3em;"> Le : </strong><%= @tache.created_at.strftime("%d/%m/%y à %H:%M") %>
          </td>
        </tr>
        
        <% if !@tache.modified_by.nil? %>
        <tr>
          <td colspan="4">
              <h3>Modifiée par :</h3><%= @tache.modified_by %>
              <strong style="margin-left: 3em;"> Le : </strong><%= @tache.updated_at.strftime("%d/%m/%y à %H:%M") %>        
          </td>
        </tr>
        <% end %>
      
        <tr>
          <td colspan="4">
            <div class="pull-left">
              <%= link_to image_tag("glyphicons/glyphicons_221_unshare.png"), :back %>
              <%= link_to image_tag("glyphicons/glyphicons_151_edit.png"), edit_tach_path(@tache) %>   
            </div>
            <div class="pull-right">
              <%= link_to image_tag("glyphicons/glyphicons_016_bin.png"), @tache, :confirm => 'Confirmer la suppression ?', :method => :delete %>
            </div>
          </td>
        </tr>
       </tbody>
    </table>
  </div>
</div>
