<%= render 'filter', :locals => { :filter => @filter }%>

<%= render 'title', :locals => { :title => @title }%>


<div class="container-fluid">
  <table class="table table-bordered table-striped">
    <thead>
      <tr>
        <th><center>Id</center></th>
        <th><center>Statut</center></th>
        <th><center>Compte</center></th>
        <th><center>Libellé</center></th>
        <th><center>Contact</center></th>
        <th><center>Estimation</center></th>
        <th><center>Marge</center></th>
        <th><center>Échéance</center></th>
        <th><center>Collaborateur</center></th>
        <th><center>Éditer</center></th>
      </tr>
    </thead>
    
    <tbody>
      <% @opportunities.each do |opportunity| %>
      <tr>
        <td><center><%= link_to opportunity.id, opportunity %></center></td>
        <td><center>
          <% if opportunity.statut == "Détectée"%>
            <span class="badge badge-important">
          <% elsif opportunity.statut == "En cours"%>
            <span class="badge badge-warning">
          <% elsif opportunity.statut == "Gagnée"%>
            <span class="badge badge-success">
          <% elsif opportunity.statut == "Perdue"%>
            <span class="badge badge-inverse">
          <% else %>
            <span class="badge badge-info">
          <% end %>
          <%= opportunity.statut %></span>
        </center></td>
        <td><center><%= if !opportunity.account.nil? then link_to opportunity.account.company , account_events_url(opportunity.account) end%></center></td>
        <td><center><%= opportunity.name %></center></td>
        <td><center><%= if !opportunity.contact.nil? then link_to opportunity.contact.surname, opportunity.contact end%></center></td>
        <td style="text-align :right;">
          <% if !opportunity.amount.nil? %>
            <%= number_to_currency(opportunity.amount, :locale => :fr)  %> <strong> HT </strong>
          <% end %>
        </td>
	<td style="text-align :right;">
          <% if !opportunity.profit.nil? %>
            <%= number_to_currency(opportunity.profit, :locale => :fr)  %> <strong> HT </strong>
          <% end %>
        </td>
        <td><center><%= if !opportunity.term.nil? then opportunity.term.strftime("%d/%m/%y") end%></center></td>
        <td><center><%= if !opportunity.user.nil? then opportunity.user.full_name end%></center></td>
        <td><center><%= link_to image_tag("glyphicons/glyphicons_151_edit.png"), edit_opportunity_path(opportunity),{:title => "Éditer l'opportunité", :class =>"btn"}  %></center></td>
      </tr>
      <% end %>
    </tbody>
  </table>
  
  <br />
  
  <%= paginate @opportunities %>
  
  <div class="page-header pull-right" style="text-align: right;">
    <h4> Montant total estimé : <%=number_to_currency(@total_amount, :locale => :fr) %>  HT</h4> <br /> 
    <h4> Marge totale estimée : <%=number_to_currency(@total_profit, :locale => :fr) %>  HT</h4> 
  </div>


</div>
