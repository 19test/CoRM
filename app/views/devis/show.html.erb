<div class="container-fluid">
  
  <div class="page-header">
    <h1>Devis n°<%= @devi.id %> </h1>
  </div>

  <div class="well">
    
    <div class="row">
      
      <div class="span8">
        <h3>Données interne : </h3>
        <hr />
      
        <div class="field">
          Référence : <%= @devi.ref %>
        </div>
        
        <div class="field">
          Référence Client : <%= @devi.ref_compte %>
        </div>
        
        <div class="field">
          Date : <%= if !@devi.date.nil? then @devi.date.strftime("%d/%m/%Y") end%>
        </div>
        
        <div class="field">
          Collaborateur : <%= @devi.user.nom_complet %>
        </div>
        
        <% if !@devi.contact.nil? %>
          <div class="field">
            Contact : <%= @devi.contact.nom_complet %>
          </div>
        <% end %>
      
      </div>
      <div class="span4">
        <h3>Infos Compte : </h3>
        <hr />
      
        <div class="field">
          Compte : <%= @devi.compte.societe %>
        </div>
        
        <div class="field">
          Adresse : <%= @devi.compte.adresse1 %>
        </div>
        
        <div class="field">
          Code Postal : <%= @devi.compte.cp %>
        </div>
        
        <div class="field">
          Ville : <%= @devi.compte.ville %>
        </div>
        
      </div>
      
    </div><hr />
    
    <div class="row">
      <div class="span12">
        <table class="table table-bordered table-striped">
          <tr>
            <th>Référence</th>
            <th>Désignation</th>
            <th>Quantité</th>
            <th>Prix U. HT</th>
            <th>Total HT</th> 
          </tr>
        
        <% for item in @devi.items %>
          <tr>
            <td><%= item.ref %></td>
            <td style="width: 60%;"><%= item.designation %></td>
            <td style="width: 5%; text-align :center;"><%= (number_with_precision(item.quantite, :precision => 2, :locale => :fr) || 0) %></td>
            <td style="text-align :right;"><%= item.prix_ht %> €</td>
            <td style="text-align :right;"><%= item.total_ht %> €</td>
          </tr>
        <% end %>
        </table>
        
        <div class="pull-right">
          <div class="span2"><strong> Total HT :</strong></div><div class="span1" style="text-align: right;"><%=number_to_currency(@devi.total_ht, :locale => :fr) %></div><br />
          <div class="span2"><strong> TVA <%= @devi.taux_tva.to_s %> % :</strong></div><div class="span1" style="text-align: right;"><%=number_to_currency(@devi.total_tva, :locale => :fr) %></div><br />
          <div class="span2"><strong> Total TTC :</strong></div><div class="span1" style="text-align: right;"><%=number_to_currency(@devi.total_ttc, :locale => :fr) %></div><br />
        </div>
        
      </div>
    </div>
    <hr />
    
    <div class="row">
      <div style="margin-left: 2.5em;">
        <h3>Modalités</h3>
      </div>
      <hr />
      
      <div class="span6">
        <div class="field">
          <strong>Validité du devis :</strong> <%= @devi.validite %><br />
        </div>
        
        <div class="field">
          <strong>Condition de règlement :</strong> <%= @devi.mode_reg %><br />
        </div>
        
      </div>
    </div>
    <hr />

     <div class="row">
      <div style="margin-left: 2.5em;">
        <h3>Informations complémentaires</h3>
      </div>
      <hr />
      
      <div class="span6">
        <% if !@devi.opportunite.nil? %>
          <div class="field">
            <strong>Opportunité : </strong><%= link_to @devi.opportunite.nom , @devi.opportunite%>
          </div><br />
        <% end %>
        
        <% if @devi.fichier_joint.exists? %>
          <div class="field">
            <strong>Fichier-joint : </strong><%= link_to (image_tag("glyphicons/glyphicons_036_file.png") + ' ' + @devi.fichier_joint_file_name), @devi.fichier_joint.url, :target => "_blank"%>
          </div><br />
        <% end %>
        
        <div class="field">
            <strong>Modèle : </strong><%= link_to @devi.modele.societe , edit_modele_path(@devi.modele)%>
        </div><br />
        
        <div class="field">
          <strong>Créé par : </strong><%= @devi.created_by %><strong style="margin-left: 3em;"> Le : </strong><%= @devi.created_at.strftime("%d/%m/%Y à %H:%M") %>
        </div>
        
      </div>
    </div>
     <hr />
    
    <div class="row">
      <div class="span4">
        <%= link_to image_tag("glyphicons/glyphicons_221_unshare.png"), :back %>
        <%= link_to image_tag("glyphicons/glyphicons_151_edit.png"), edit_devi_path(@devi) %>
        <%= link_to "Télécharger le pdf", devi_path(@devi.id, :format => "pdf"), {:class =>"btn btn-info", :target => "_blank"} %>
      </div>
    </div>
  </div>
  
</div>