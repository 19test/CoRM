                  <%= image_tag("glyphicons/glyphicons_280_settings.png", :size => "16x16")%>
		</a>
		<ul class="dropdown-menu">
		  <li><%= link_to '<i class="icon-book"></i> Types'.html_safe, types_path %></li>
		  <li class="divider"></li>
		  <li><%= link_to '<i class="icon-barcode"></i> Produits'.html_safe, produits_path %></li>
