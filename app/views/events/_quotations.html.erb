<div class="container-fluid" style="margin-top: 1em;">
   

     <div class="well">
       <div class="row-fluid">
         <div class="span8">
           <h3>Devis de <%= @account.company %> </h3>
         </div>
		<div class="pull-right">
           <%= link_to image_tag("glyphicons/glyphicons_190_circle_plus.png"), new_quotation_path(:account_id => @account.id)  ,{:title => "Créer un devis", :class =>"btn"}%>
       </div>
	   </div>
     </div>

         
</div>



<div class="container-fluid">
  
  <% if Quotation.by_account(@account).blank? %>
    <h4> Aucun Devis n'est rattaché à ce compte </h4>
  <% else %>
    
    <table class="table table-bordered table-striped">
      <tr>
        <th><center>Id</center></th>
        <th><center>Statut</center></th>
        <th><center>Référence</center></th>
        <th><center>Opportunité</center></th>
        <th><center>Total HT</center></th>
        <th><center>Date</center></th>
        <th><center>Éditer</center></th>
        <th><center>PDF</center></th>         
      </tr>
    
    <% @quotations = Quotation.by_account(@account).order('date').page(params[:page]) %>
    <% @quotations.each do |quotation| %>
    <tr>
        <td><center><%= quotation.id %></center></td>
        <td><center>
            <% if quotation.statut == "Sauvegardé"%>
              <span class="badge badge-important">
            <% elsif quotation.statut == "En cours"%>
              <span class="badge badge-warning">
            <% elsif quotation.statut == "Accepté"%>
              <span class="badge badge-success">
            <% elsif quotation.statut == "Refusé"%>
              <span class="badge badge-inverse">
            <% else %>
              <span class="badge badge-info">
            <% end %>
            <%= quotation.statut %></span>
          </center></td>
        <td><center><%= quotation.ref %></center></td>
        <td><center>
          <% if !quotation.opportunity.nil? %>
            <%= link_to quotation.opportunity.name , quotation.opportunity%>
          <% end %>
        </center></td>
        <td style="text-align :right;"><%= number_to_currency(quotation.total_excl_tax, :locale => :fr) %></td>
        <td><center><%= if !quotation.date.nil? then quotation.date.strftime("%d/%m/%Y") end%></center></td>
        <td><center><%= link_to image_tag("glyphicons/glyphicons_151_edit.png"), edit_quotation_path(quotation) ,{:title => "Modifier le devis", :class =>"btn"} %></center></td>          
        <td><center><%= link_to image_tag("glyphicons/glyphicons_015_print.png"), quotation_path(quotation, :format => "pdf"),{:title => "Afficher le PDF", :class =>"btn"} %></center></td>
    </tr>    
    <% end %>
    </table>
    
  <% end %>
  

    
</div>
