<%= form_for([@account, @event_new], :html => { :class => "well ", :multipart => true}) do |f| %>

  <div class="row-fluid show-grid" style="margin-top: 1em; ">
    
    <div class="span2">
        D&eacute;but : <%= f.text_field :date_begin, :value => Date.today.strftime("%d/%m/%Y"), :class =>"event_date" %>
     </div>
    
    <div class="span3" style="margin-left: 0em; padding-top: 1.35em;">
         à <%= f.time_select :date_begin , :class => "event_time" %>
    </div>
    
    
<!--    <div class="span3" style="margin-left: 0em; padding-top: 1.35em;">
         à <%= select_time Time.now, :prefix => :date_begin_time, :class => "event_time" %>
    </div>-->
    
    <div class="span2">
        Fin : <%= f.text_field :date_end, :value => Date.today.strftime("%d/%m/%Y"), :class =>"event_date" %>
    </div>
    
    <div class="span3" style="margin-left: 0em; padding-top: 1.35em;">
         à <%= f.time_select :date_end , :class => "event_time" %>
    </div>
    
  </div>
  
  <div class="row-fluid show-grid" style="margin-top: 1em;">
    
    <div class="span3" style="margin-right: 9em;">
        Contact :  <%= f.collection_select :contact_id, @account.contacts.order('surname'), :id, :full_name, :class =>"filter_coll" %>
    </div>
    
    <div class="span2">
        Type :  <%= f.collection_select :event_type_id, EventType.all, :id, :full_type, :class =>"filter_coll"%>
    </div>
    
  </div>
  
  <br />     
           
  <div >
    Description : <br />
    <%= f.text_area :notes, { :display_with => :simple_format, :rows => "5", :style=>'width: 50em;', :required => 'required' } %>
  </div>
  
  <div>
    Pièce jointe : <br />
    <%= f.file_field :attach, :style=>'width: 20em;' %>
  </div>
  <br />
  
  <div>
    <%= check_box_tag :generate, "yes" %> Générer une tâche liée à cet évènement

  </div>
  <br />
  
<div id="tache_values" style="display: none;">
  <div class="row">
    
    <div class="span2">
     Statut : <br />
    <%= select :statut, :statut ,Task::STATUTS,{}, {:style =>"width: 100%"}%>
    </div>
    
    <div class="span2">
      Echéance :  <br /> <%= text_field_tag :term , nil ,{:id =>"task_term" , :style =>"width: 100%"}%>
    </div>
    
    <div class="span6">
      Collaborateur :  <br />
      <%= select_tag :user_id, options_from_collection_for_select(User.all, :id, :full_name, current_user.id),{:style =>"width: 250px"} %><br />
      <%= check_box_tag :mail, "yes" %> Envoyer un email à ce collaborateur
    </div>
    
  </div>
  
  <div class="row">
    
    <div class="span4">
       Description : <br /> <%= text_area_tag :notes, nil,:display_with => :simple_format, :rows => "5", :style=>'width: 30em;'%>
    </div>
    
  </div>
  
</div>
<br />
  
  <%= f.hidden_field :account_id %>
  <div class="actions">
    <%= f.submit 'Créer un Évènement', :class =>"btn btn-primary" %>
  </div>
    
<% end %>

