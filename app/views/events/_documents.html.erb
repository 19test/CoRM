<div class="container-fluid" style="margin-top: 1em;">
   

     <div class="well">
       <div class="row-fluid">
         <div class="span8">
           <h3>Liste des Documents</h3>
         </div>
         <div class="pull-right">
           <%= link_to image_tag("glyphicons/glyphicons_190_circle_plus.png"), new_document_path(:account_id => @account.id) ,{:title => "Créer un document"}%>
         </div>
       </div>
     </div>

         
</div>




<div class="container-fluid">
  
 <% if Document.by_account(@account).blank? %>
 <h4> Aucun document n'est rattaché à ce account </h4>
 <% else %>
  
 <table class="table table-bordered table-striped">
    <thead>
      <tr>
        <th>Id</th>
        <th>Nom</th>
        <th>Fichier joint</th>
        <th>Notes</th>
        <th>Voir</th>
        <th>Editer</th>
      </tr>
    </thead>
    <tbody>
      <% @documents = Document.by_account(@account).order('name ASC').page(params[:page]) %>
      <% @documents.each do |document| %>
        <tr>
         <td><%= link_to document.id, document %></td>
         <td><%= document.name %></td>
         <td><%= link_to (image_tag("glyphicons/glyphicons_036_file.png") + ' ' + document.attach_file_name), document.attach.url, :target => "_blank"%></td>
         <td><%= truncate(document.notes, :length => 600, :separator => ' ') %></td>
         <td><%= link_to image_tag("glyphicons/glyphicons_029_notes_2.png"), document %></td>
         <td><%= link_to image_tag("glyphicons/glyphicons_151_edit.png"), edit_document_path(document) %></td>
        </tr>
        <% end %>
      </tbody>
  </table>
  
  <br />
  
  <%= paginate @documents %>
  
  <% end %> 
  
</div>

