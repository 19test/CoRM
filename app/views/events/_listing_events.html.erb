<% if !@events.nil? and @events.length > 0 %>
<div id="listing-event">
  <label class="checkbox" id="toggle-events-more">
    <input type="checkbox" checked="checked"/>Déplier tous les évenements
  </label>
  <% @events.each do |e| %>
  <div class="event-container">
    <div class="event small">
      <div class="message row-fluid">
        <%= render :partial => 'event_message', :locals => { :e => e, :css_class => 'content' } %>
        <p class="time">
          il y a <%= distance_of_time_in_words_to_now(e.date_begin) %>
        </p>
      </div>
      <div class="more">
        <h4>Plus d'informations</h4>
        <ul>
          <li>N° <%= e.id %></li>
        <% if !e.date_begin.blank? %>
          <li>Début : <%= e.date_begin.strftime("%d/%m/%y à %H:%M") %></li>
        <% end %>
        <% if !e.date_end.blank? %>
          <li>Fin : <%= e.date_end.strftime("%d/%m/%y à %H:%M") %></li>
        <% end %>
        <% if !e.account.nil? %>
          <li>Compte : <%= e.account.company %></li>
        <% end %>
        <% if !e.contact.nil? %>
          <li>Contact : <%= e.contact.full_name %></li>
        <% end %>
        <% if !e.event_type.nil? %>
          <li>Type : <%= e.event_type.full_type %></li>
        <% end %>
        <% if !e.attach_file_name.blank? %>
          <li>Fichier-joint : <%= link_to e.attach_file_name, e.attach.url, { :target => '_blank' } %></li>
        <% end %>
        </ul>
        <% if !e.notes.blank? %>
          <div class="notes"><pre class="no-style"><%= e.notes %></pre></div>
        <% end %>
        <% if e.created_by == current_user.id or e.modified_by == current_user.id or current_user.has_role? :super_user %>
          <%= link_to "Supprimer", event_path(e), :data => { :confirm => 'Confirmer la Suppression?'},:class => "" , :title => "Supprimer l'évènement", :method => :delete %>
        <% end %>
      </div>
    </div>
  </div>
  <% end %>
</div>
<% end %>
<%= paginate @events %>
