<table class="table table-striped">
<% @events.each do |event| %>
  <tr>
    <td>
      <blockquote>
        <div>
        <div>
          <small>
            N° <%= event.id %> -
            D&eacute;but :  <%= event.date_begin.strftime("%d/%m/%y à %H:%M") unless event.date_begin.blank?%> -
            Fin :  <%= event.date_end.strftime("%d/%m/%y à %H:%M") unless event.date_end.blank? %> -
            (<%= distance_of_time_in_words(event.date_begin, event.date_end) unless (event.date_begin.blank? or event.date_end.blank?) %>) - 
            Contact : <strong><%= if event.contact.nil?  then "Néant" else event.contact.full_name  end%></strong> -
            Type : <strong><%= if event.event_type.nil? then "Néant" else event.event_type.full_type end %></strong> - 
            Créé il y a  <%= distance_of_time_in_words_to_now(event.updated_at) %> par <%= event.author.full_name %> - 
            <% if !event.task.nil? %>
              <strong> Lié à la Tache n° <%= event.task.id %> </strong>
            <% end %>
            
          </small>
        </div>
        <div class="pull-right">
          <%= link_to image_tag("glyphicons/glyphicons_016_bin.png"), event_path(event),  :data => { :confirm => 'Confirmer la Suppression?' }, :method => :delete %>
        </div>
      </div>
        
      
      <% if !event.task.nil? %>
       <div class="row">
        <div class="span12" >
          <% if event.modified_by.blank? %>
            (<%= link_to "Tâche n°"+event.task.id.to_s , event.task %> créée.)
          <% else %>
            (<%= link_to "Tâche n°"+event.task.id.to_s , event.task %> modifiée.)
          <% end%>
        </div>
       </div>
      <% end %>
      
      
      <% if !event.notes2.blank? %>
      <div class="row">
        <pre>
        <%= simple_format (event.notes2) %>
        </pre>
      </div>
    <% end %>

      
      <% if !event.notes.blank? %>
      <div class="row">
        <%= simple_format (event.notes) %><br />
      </div>
    <% end %>
    
   
    
      <% if event.attach.exists? %>
      <div> 
        Fichier joint : 
        <%= link_to (image_tag("glyphicons/glyphicons_036_file.png") + ' ' + event.attach_file_name), event.attach.url, :target => "_blank" %>
      </div>
      <hr />
      <% end %>


      
      
      </blockquote>
    </td>
  </tr>
<% end %>
</table>

<%= paginate @events %>
