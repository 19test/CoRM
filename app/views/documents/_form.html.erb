<%= form_for(@document, :html => { :class => "well "}) do |f| %>
  <% if @document.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@document.errors.count, "error") %> prohibited this document from being saved:</h2>

      <ul>
      <% @document.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


  <div class="field">
    <div class="span2"><%= f.label :nom %></div>
    <%= f.text_field :nom %>
  </div>
  
  <div class="field" style="margin-bottom: 1em;">
    <div class="span2">Fichier-joint :</div>  <div class="span3" style="margin-left: 0em;"><%= f.file_field :fichier_joint, :style=>'width: 20em;' %></div>
    <br /><br />
  </div>
  
  <div class="field">
    <div class="span2">Fichier-joint actuel :</div>
    <% if @document.fichier_joint.exists? %>
       <%= link_to (image_tag("glyphicons/glyphicons_036_file.png") + ' ' + @document.fichier_joint_file_name), @document.fichier_joint.url, :target => "_blank"%>
    <% end %>
    <br /><br />
  </div>
  
  <div class="field">
    <div class="span2"><%= f.label :notes %></div>
    <%= f.text_area :notes, :display_with => :simple_format, :rows => "5", :style=>'width: 40em;' %>
  </div>
  
  <div class="field">
    <div class="span2" >
      <%= link_to image_tag("glyphicons/glyphicons_221_unshare.png"), :back %>
    </div>
        <%= f.submit :class =>"btn btn-primary"%>
  </div>
  
  <%= f.hidden_field :compte_id %>
<% end %>
