<%= form_for(@document, :html => { :class => "well "}) do |f| %>
  <% if @document.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@document.errors.count, "error") %> prohibited this document from being saved:</h2>

      <ul>
      <% @document.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


  <div class="field">
    <div class="span2">Nom : </div><%= f.text_field :name ,{ :class => 'required' } %>
  </div>
  
  <div class="field" style="margin-bottom: 1em;">
    <div class="span2">Fichier-joint :</div>  <div class="span3" style="margin-left: 0em;"><%= f.file_field :attach ,{ :class => 'required', :style=>'width: 20em;'} %></div>
    <br /><br />
  </div>
  
  <div class="field">
    <div class="span2">Fichier-joint actuel :</div>
    <% if @document.attach.exists? %>
       <%= link_to (image_tag("glyphicons/glyphicons_062_attach.png") + ' ' + @document.attach_file_name), @document.attach.url, :target => "_blank"%>
    <% end %>
    <br /><br />
  </div>
  
  <div class="field">
    <div class="span2"><%= f.label :notes %></div>
    <%= f.text_area :notes, :display_with => :simple_format, :rows => "5", :style=>'width: 40em;' %>
  </div>
 
   <br />
  	
	<div class="field">
    <% if !@document.id.nil? %>
		<div class="span9"> Créé par : <%= @document.author.full_name %>, le </strong><%= @document.created_at.strftime("%d/%m/%y à %H:%M") %>. </div> <br />
		
		<% if !@document.updated_by.nil? %>
			<div class="span9"> Dernièrement modifié par : <%= @document.editor.full_name %>, le <%= @document.updated_at.strftime("%d/%m/%y à %H:%M") %>. </div> <br />
		
		<% else %>
		<% end %>
		
	<% end %>
	</div>
	  
	<hr /> 
 
     <div class="row">
	  <%= if !@document.id.nil? then f.submit 'Modifier ce Document', :class =>"btn btn-primary",:id =>"document_submit_form" else f.submit 'Créer un Document', :class =>"btn btn-primary",:id =>"document_submit_form" end %>
      <%= if !@document.id.nil? then link_to image_tag("glyphicons/glyphicons_016_bin.png"), @document, :title => "Supprimer le document", :confirm => 'Confirmer la suppression ?', :class =>"pull-right btn", :method => :delete end %> 
  </div>
  
  <%= f.hidden_field :account_id %>
<% end %>
