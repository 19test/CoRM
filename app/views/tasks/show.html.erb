<div class="container-fluid">
   
   <div class="well" style="margin-top: 1em;">
      <div class="row-fluid">
        <div class="span9">
          <h3>Tâche n°<%= @task.id %></h3>
         </div>
          <%= link_to image_tag("glyphicons/glyphicons_210_left_arrow.png"), :back ,{:title => "Retour", :class =>"pull-right btn"} %>
		  <%= link_to image_tag("glyphicons/glyphicons_151_edit.png"), edit_task_path(@task),{:title => "Éditer", :class =>"pull-right btn"} %> 
      </div>
   </div>

</div>


<div class="container-fluid" style="margin-top: 1em;"">
<div class="well">

<table class="table table-bordered table-striped">
<tbody>
<!-- TASK INFORMATIONS -->	
		<tr>
		<td>
		<center><h4>Tâche</h4></center>
		</tr>
		</td>

<tr>
<td>
	<% if !@task.title.nil? %>
	<strong>Sujet : </strong>
			<%= @task.title  %>
	<% end %> 

	<% if !@task.priority.nil? %>
		<br/>
		<strong>Priorité : </strong>
			<%= @task.priority %>
	<% end %> 	
	<br/>
    <strong>Statut : </strong>
              <% if @task.statut == "A faire"%>
                <span class="badge badge-important">
              <% elsif @task.statut == "En cours"%>
                <span class="badge badge-warning">
              <% elsif @task.statut == "Terminé"%>
                <span class="badge badge-success">
              <% elsif @task.statut == "Annulé"%>
                <span class="badge badge-inverse">
              <% else %>
                <span class="badge badge-info">
              <% end %>
              <%= @task.statut %></span>


	
	<% if !@task.notes.blank? %>
		<br/>
			<strong>Description : </strong>
			<div style="background-color: #fff; padding: 1px 15px;"> <%= simple_format(@task.notes , {}, :sanitize => false)%> </div>
	<% end %>
 	
    
	<% if @task.attach.exists? %>

	<strong>Pièce jointe : </strong>
		<%= link_to (image_tag("glyphicons/glyphicons_062_attach.png") + ' ' + @task.attach_file_name), @task.attach.url, :target => "_blank",:title => "Télécharger le fichier" %>
	<% end %>


  <% if current_user.email == @task.user.email %>
	<% then %>
		<br/>
		<strong>Affectée à : </strong> moi-même
  <% else %>
  	<br/>
	<strong>Affectée à : </strong> <%= @task.user.full_name %> - <%= mail_to(@task.user.email) %>
  <% end %>

	<% if !@task.term.blank? %>
	<br/>
	<strong>Échéance : </strong> 
			<%= @task.term.split('/').reverse!.join('/') %>
	<% end %>  


</td>
</tr>
</tbody>
</table>
<!-- END TASK INFORMATIONS -->  
  

<!-- ACCOUNT -->
	<% if !@task.account.nil? %>
<table class="table table-bordered table-striped">
<tbody>
		<tr>
		<td>
		<center><h4>Compte</h4></center>
		</tr>
		</td>
		
		<tr>
		<td>
		<strong>Société : </strong>
		<%= link_to @task.account.company , @task.account,:title => "Afficher le compte" %>
		

		<% if !@task.account.full_adress.blank? %>		
			<br/>
			<strong>Adresse : </strong> 
				<%= @task.account.full_adress %>
		<% end %>
		
		<% if !@task.account.tel.blank? %>
			<br/>
		<strong>Téléphone : </strong>
				<%= @task.account.tel %> 
		<% end %>
		
		<% if !@task.account.category.blank? %>
			<br/>
		<strong>Genre : </strong>
				<%= @task.account.category %> 
		<% end %>
	
	
	<% end %>
<!-- END ACCOUNT -->
</td>
</tr>
</tbody>
</table>

	
<!-- CONTACT -->	
	<% if !@task.contact.nil? %>
	<table class="table table-bordered table-striped">
	<tbody>
		<tr>
		<td>
		<center><h4>Contact</h4></center>
		</tr>
		</td>
		<tr>
		<td>
		<strong>Nom : </strong>
			<%= link_to @task.contact.full_name, @task.contact,:title => "Afficher le contact" %>
			<% if !@task.contact.email.blank? %>
				- <%= mail_to(@task.contact.email)%>
			<% end %></div>
			
			<% if !@task.contact.job.blank? %>
			<br/>			
			<strong>Fonction : </strong>
					<%= @task.contact.job %> 	
			<% end %>			

			<% if !@task.contact.tel.blank? %>
			<br/>
			<strong>Téléphone : </strong>
					<%= @task.contact.tel %> 	
			<% end %>


			<% if !@task.contact.mobile.blank? %>
			<br/>
			<strong>Mobile : </strong> 
					<%= @task.contact.mobile %> 		
			<% end %>
		</div>
	<% end %>
<!-- END CONTACT -->
</td>
</tr>
</tbody>
</table>


<!-- OTHER INFO -->
		<table class="table table-bordered table-striped">
	<tbody>
		<tr>
		<td>
	<center><h4>Informations complémentaires</h4></center>
		</tr>
		</td>
		<tr>
		<td>
	<strong>Créée par : </strong>
		<%= @task.author.full_name %>, le <%= @task.created_at.strftime("%d/%m/%y à %H:%M") %>
		<br/>
		<% if !@task.modified_by.nil? %>
			<strong><abbr title="Dernière modification">Modifiée par : </abbr></strong>
			<%= @task.editor.full_name %>, le <%= @task.updated_at.strftime("%d/%m/%y à %H:%M") %>
			<br />
		<% end %>		
<!-- END OTHER INFO -->
</tr>
</td>
</tbody>
</table>
<hr/>	     
  <div class="row">
      <%= link_to image_tag("glyphicons/glyphicons_016_bin.png"), @task, :title => "Supprimer la tâche" , :confirm => 'Confirmer la suppression ?', :class =>"pull-right btn", :method => :delete %>    
  </div>	
</div>
</div>

 