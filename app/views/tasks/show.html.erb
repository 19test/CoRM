<div class="container-fluid">
  
  <div class="page-header">
    <h1>Tâche n°<%= @task.id %> </h1>
  </div>

  <div class="well">
    
    <table class="table table-striped">
      <tbody>
        <tr>
          <td>  
            <div class="span2">
              <h3>Statut :</h3>
              <% if @task.statut == "A faire"%>
                <span class="badge badge-important">
              <% elsif @task.statut == "En cours"%>
                <span class="badge badge-warning">
              <% elsif @task.statut == "Terminé"%>
                <span class="badge badge-success">
              <% elsif @task.statut == "Annulé"%>
                <span class="badge badge-inverse">
              <% else %>
                <span class="badge badge-info">
              <% end %>
              <%= @task.statut %></span>
            </div>
          </td>
    
	  <td>
            <div class="span2">
              <h3> Compte :</h3>
              <%= if !@task.account.nil? then link_to @task.account.company , @task.account end%>
            </div>
          </td>
    
          <% if !@task.contact.nil? %>
          <td>
            <div class="span2">
              <h3> Contact :</h3>
              <%= link_to @task.contact.full_name, @task.contact %>
            </div>
          </td>
          <% end %>

          <td>
            <div class="span2">
              <h3>Echéance :</h3>
              <%= @task.term.split('/').reverse!.join('/') %>
            </div>
          </td>
        </tr>
    
        <tr>
          <td colspan="4">
            <h3>Description :</h3>
			<%= simple_format(@task.notes , {}, :sanitize => false)%>
          </td>
        </tr>
    
        <% if @task.attach.exists? %>
        <tr>
          <td colspan="4">
            <h3> Pièce jointe :</h3>
            <%= link_to (image_tag("glyphicons/glyphicons_036_file.png") + ' ' + @task.attach_file_name), @task.attach.url, :target => "_blank"%>
          </td>
        </tr>
        <% end %>
      
        <tr>
          <td colspan="4">
              <h3>Collaborateur : </h3><strong><%= @task.user.full_name %></strong> : <%= mail_to(@task.user.email) %>
          </td>
        </tr>
      
        <tr>
          <td colspan="4">
              <h3>Créée par : </h3><%= @task.author.full_name %><strong style="margin-left: 3em;"> Le : </strong><%= @task.created_at.strftime("%d/%m/%y à %H:%M") %>
          </td>
        </tr>
        
        <% if !@task.modified_by.nil? %>
        <tr>
          <td colspan="4">
              <h3>Modifiée par :</h3><%= @task.editor.full_name %>
              <strong style="margin-left: 3em;"> Le : </strong><%= @task.updated_at.strftime("%d/%m/%y à %H:%M") %>        
          </td>
        </tr>
        <% end %>
      
        <tr>
          <td colspan="4">
            <div class="pull-left">
              <%= link_to image_tag("glyphicons/glyphicons_221_unshare.png"), :back %>
              <%= link_to image_tag("glyphicons/glyphicons_151_edit.png"), edit_task_path(@task) %>   
            </div>
            <div class="pull-right">
              <%= link_to image_tag("glyphicons/glyphicons_016_bin.png"), @task, :confirm => 'Confirmer la suppression ?', :method => :delete %>
            </div>
          </td>
        </tr>
       </tbody>
    </table>
  </div>
</div>
