<div class="container-fluid" style= "background-color: #D8D8D8; margin-top: 0em; ">
  
  <%= form_for(:filter, :url => { :action => 'filter' } , :html => {:method => :get} ) do |f| %>

     
      <div class="span2">
        <h6>Statut : </h6><%= f.select :statut, Task::STATUTS_A_FILTRER,{:include_blank => "Tous", :selected => @statut_filter}, :class => "filter_statut" %>
      </div>

      <div class="span2">
        <h6>Priorit√© : </h6><%= f.select :priority, Task::PRIORITIES_A_FILTRER,{:include_blank => "Tous", :selected => @priority_filter}, :class => "filter_priority" %>
      </div>
      
      <div class="span2">
        <h6>Collaborateur : </h6><%= f.collection_select :user_email, User.all_reals, :email, :full_name, {:include_blank => "Tous", :selected => @email_filter} , :class =>"filter_coll"%>
      </div>
      
      <div class="span1" style="margin-top: 18px;">
        <%= f.submit "Filtrer", :class =>"btn "%>
      </div>
 
  <% end %>
  

  
</div>
