<%= render 'filter', :locals => { :filter => @filter }%>
<%= render 'title', :locals => { :title => @title }%>

<div class="container-fluid">
  <table class="table table-bordered table-striped">
    <thead>
      <tr>
        <th><center>Id</center></th>
        <th><center>Statut</center></th>
        <th><center>Compte</center></th>
        <th><center>Description</center></th>
        <th><center>Contact</center></th>
        <th><center>Échéance</center></th>
        <th><center>Collaborateur</center></th>
        <th><center>Éditer</center></th>      
      </tr>
    </thead>
    <tbody>
      <% @tasks.each do |task| %>
      <tr>
        <td><center><%= task.id %></center></td>
        <td><center>
          <% if task.statut == "A faire"%>
            <span class="badge badge-important">
          <% elsif task.statut == "En cours"%>
            <span class="badge badge-warning">
          <% elsif task.statut == "Terminé"%>
            <span class="badge badge-success">
          <% elsif task.statut == "Annulé"%>
            <span class="badge badge-inverse">
          <% else %>
            <span class="badge badge-info">
          <% end %>
          <%= task.statut %></span>
        </center></td>
        <td><center><%= if !task.account.nil? then link_to task.account.company , account_events_url(task.account),{:title => "Afficher les évenements"} end%></center></td>
        <td class="descrip"><%= truncate(task.notes, :length => 300, :separator => ' ')%></td>
        <td><center><%= if !task.contact.nil? then link_to task.contact.full_name, edit_contact_path(task.contact),{:title => "Éditer le contact"}  end%></center></td>
        <td><center><%= task.term.split('/').reverse!.join('/') %></center></td>
        <td><center><%= if !task.user.nil? then task.user.full_name end%></center></td>
        <td><center><%= link_to image_tag("glyphicons/glyphicons_151_edit.png"), edit_task_path(task) ,{:title => "Éditer la tâche", :class =>"btn"}  %></center></td>
      </tr>
      <% end %>
    </tbody>
  </table>
  
  <br />
  
  <%= paginate @tasks %> 

</div>
