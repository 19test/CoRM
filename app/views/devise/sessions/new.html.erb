<div class="container-fluid">
<% unless flash[:notice].blank? %>
  <div class="alert alert-info">
    <button class="close" data-dismiss="alert">×</button>
    <%= content_tag :p, flash[:notice] %>
  </div>
<% end %>

<% unless flash[:error].blank? %>
  <div class="alert  alert-error">
    <button class="close" data-dismiss="alert">×</button>
    <%= content_tag :p, flash[:error] %>
  </div>
<% end %>

<% unless flash[:alert].blank? %>
  <div class="alert  alert-warning">
    <button class="close" data-dismiss="alert">×</button>
    <%= content_tag :p, flash[:alert] %>
  </div>
<% end %>
</div>

<div id="bloc-login">
  <div id="logo">
  <%= image_tag("logo-login.png") %>
  </div>
  
  <div id="login">

    <%= form_for(resource, :as => resource_name, :url => session_path(resource_name) ) do |f| %>
    <%= devise_error_messages! %>
    
      <div class="field" >
          <div align="center"><h3>CoRM</h3>
            <strong>Veuillez vous identifier</strong>
          </div>
          <br />
          <div align="right">Identifiant <%= f.email_field :email, { :required => 'required'} %> </div>
          <div align="right">Mot de passe <%= f.password_field :password, { :required => 'required'} %></div>
          <div class="pull-right">
            <% if devise_mapping.rememberable? -%>
              <%= f.check_box :remember_me %> Mémoriser
            <% end %>
            <%= f.submit "Connexion", :class =>"btn btn-primary" %>
          </div>
          <div class="pull-left"><%= render "links" %></div>
      </div>
      
    <% end %>
  </div>
  
</div>
