<div class="container-fluid" style="margin-top: 1em;">
  
     <div class="well">
       <div class="row-fluid">
         <div class="span9">
           <h1>Utilisateurs enregistrés</h1></div>
		       <% if current_user.has_role? :admin %>
    <%= link_to image_tag("glyphicons/glyphicons_190_circle_plus.png"), new_user_path ,{:title => "Créer un utilisateur", :class=>"btn pull-right"} %>
    <% end %>
         
		</div>
	 </div>
  <p>
    <h3>Utilisateurs actifs : <%= @all_reals_user_count %> </h3>

  </p>
  <% if @users.length > 0 %>
  </br>
  <table class="table table-bordered table-striped table-hover">
    <thead>
      <tr>
        <th><center>#</center></th>
        <th><center>Adresse e-mail</center></th>
        <th><center>Nom</center></th>
        <th><center>Rôles</center></th>
        <% if current_user.has_role?(:super_user) or current_user.has_role?(:admin) %>
			    <% if current_user.has_role?(:admin) %><th><center>État</center></th><% end %>
			    <th><center>Éditer</center></th>
        <% end %>
      </tr>
    </thead>
    <tbody>
    <% @users.each do |u| %>
      <tr>
        <td><center><%= u.id %></center></td>
        <td><%= link_to u.email, edit_user_path(u) %></td>
        <td><%= u.full_name %></td>
        

			<td>
			<% if u.roles.length > 0 %>
				<% if u.roles[0].name == "admin" %>
				<center><span class="badge badge-important"> <%= u.roles[0].name %> </span></center>
				<% end %>
				<% if u.roles[0].name == "super_user" %>
				<center><span class="badge badge-warning"> <%= u.roles[0].name %> </span></center>
				<% end %>
				<% else %>
				<center> - </center>
			<% end %>
			</td>
        <% if current_user.has_role?(:admin) %>
			<% if u.enabled? %>
				<td><center><span class="label label-success">Activé</span></center></td>
				<% else %>
					<td><center><span class="label label-inverse">Désactivé</span></center></td>
			<% end %>
        <% end %>
        <% if current_user.has_role?(:super_user) or current_user.has_role?(:admin) %>
        <td><center><%= link_to "Éditer", edit_user_path(u) ,{:title => "Éditer #{u.full_name}", :class=>"btn"} %></center></td>
        <% end %>
      </tr>
    <% end %>
    </tbody>
  </table>
  <% end %>
</div>
