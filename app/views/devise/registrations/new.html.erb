<div class="container-fluid">
  <div class="page-header">
    <h2> Création de compte utilisateur</h2>
  </div>

<%= form_for(@user, :as => resource_name, :url => users_path, :html => { :method => :post,:class => "well" }) do |f| %>
  <%= devise_error_messages! %>

  <div><%= f.label :email, 'E-Mail' %>
  <%= f.email_field :email, { :required => 'required' } %></div>

  <div><%= f.label :password, 'Mot de passe' %>
  <%= f.password_field :password, { :required => 'required' } %></div>

  <div><%= f.label :password_confirmation, 'Confirmation du mot de passe' %>
  <%= f.password_field :password_confirmation, { :required => 'required' } %></div>
  
 
  <div><%= f.label :forename, 'Prénom' %> <i></i>
  <%= f.text_field :forename, { :required => 'required' } %></div>

  <div><%= f.label :surname, 'Nom' %> <i></i>
  <%= f.text_field :surname, { :required => 'required' } %></div>
  
  <div><label for="user[enabled]" class="checkbox">Activé<input type="checkbox" checked="checked" name="user[enabled]" id="user[enabled]" value="1" /></label></div>
  
  <div><%= f.submit "Créer", :class =>"btn btn-primary" %></div>
  <br />
  <%= link_to image_tag("glyphicons/glyphicons_210_left_arrow.png"), :back %>
<% end %>
</div>
