<div class="container-fluid">
  
  <div class="page-header">
    <h1>Produit n°<%= @tag.id %> </h1>
  </div>

  <div class="well">
    <p id="notice"><%= notice %></p>
    
    <table class="table table-striped">
      <tbody>
        <tr>
          <td>  
            <div class="span2">
              <h3>Nom :</h3>
              <%= @tag.nom %></span>
            </div>
          </td>
        </tr>
    
        <tr>
          <td colspan="4">
            <h3>Description :</h3>
            <%= simple_format(@tag.description) %>
          </td>
        </tr>
      
        <tr>
          <td colspan="4">
              <h3>Créée par : </h3><%= @tag.created_by %><strong style="margin-left: 3em;"> Le : </strong><%= @tag.created_at.strftime("%d/%m/%y à %H:%M") %>
          </td>
        </tr>
        
        <% if !@tag.updated_by.nil? %>
        <tr>
          <td colspan="4">
              <h3>Modifiée par :</h3><%= @tag.updated_by %>
              <strong style="margin-left: 3em;"> Le : </strong><%= @tag.updated_at.strftime("%d/%m/%y à %H:%M") %>
          </td>
        </tr>
        <% end %>
     
        <tr>
          <td colspan="4">
            <div class="pull-left">
              <%= link_to image_tag("glyphicons/glyphicons_221_unshare.png"), :back %>
              <%= link_to image_tag("glyphicons/glyphicons_151_edit.png"), edit_tag_path(@tag) %>   
            </div>
            <div class="pull-right">
              <%= link_to image_tag("glyphicons/glyphicons_016_bin.png"), @tag, :confirm => 'Confirmer la suppression ?', :method => :delete %>
            </div>
          </td>
        </tr>
       </tbody>
    </table>
  </div>
</div>
