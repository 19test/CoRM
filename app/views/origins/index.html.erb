<%= render 'title', :locals => { :title => @title }%>

<div class="container-fluid">
  
  <table class="table table-bordered table-striped">
   <thead> 
    <tr>
      <th>Id</th>
      <th>Nom</th>
      <th>Description</th>
      <th>Éditer</th>
    </tr>
   </thead>
   
  <tbody> 
  <% @origins.each do |origin| %>
    <tr>
      <td><%= origin.id %></td>
      <td><%= origin.name %></td>
      <td><%= truncate(origin.description, :length => 300, :separator => ' ')%></td>
      <td><%= link_to image_tag("glyphicons/glyphicons_151_edit.png"), edit_origin_path(origin),{:title => "Éditer l'origine"} %></td>   
    </tr>
  <% end %>
  </tbody>
  </table>
  
  <br />
  
  <%= paginate @origins %> 
  
</div>
