<%= render 'titre', :locals => { :titre => @titre }%>

<div class="container-fluid">
  <table class="table table-bordered table-striped">
    <thead>
      <tr>
        <th>Id</th>
        <th>Libell&eacute;</th>
        <th>Sens</th>  
        <th>Éditer</th>
      </tr>
    </thead>
    
  <tbody>
  <% @types.each do |type| %>
    <tr>
      <td><%= type.id %></td>
      <td><%= type.libelle %></td>
      <td><%= type.direction %></td>
      <td><%= link_to image_tag("glyphicons/glyphicons_151_edit.png"), edit_type_path(type),{:title => "Éditer le type"}%></td>
     </tr>
  <% end %>
  </tbody>
  </table>
  
  <%= paginate @types %>
</div>

