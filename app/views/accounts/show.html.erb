<div class="container-fluid">
   
   <div class="well" style="margin-top: 1em;">
      <div class="row-fluid">
        <div class="span9">
          <h3>Compte n°<%= @account.id %></h3>
         </div>
          <%= link_to image_tag("glyphicons/glyphicons_210_left_arrow.png"), :back ,{:title => "Retour", :class =>"pull-right btn"} %>
		  <%= link_to image_tag("glyphicons/glyphicons_151_edit.png"), edit_account_path(@account),{:title => "Éditer", :class =>"pull-right btn"} %> 
      </div>
   </div>

</div>

<div class="container-fluid" style="margin-top: 1em;"">
<div class="well">

<table class="table table-bordered table-striped">
<tbody>
		<tr>
	
		<td colspan="2">
			<center><h4>Compte</h4></center>
		</td>

		</tr>
		
		<tr>
	<% if !@account.company.nil? %>
		<td>
			<strong>Société</strong>
		</td>
		<td>
			<%= @account.company  %>
		</td>
	<% end %>
		</tr>
		
		<tr>
	<% if !@account.full_adress.blank? %>
		<td>
			<strong>Adresse</strong>
		</td>
		<td>
			<%= @account.full_adress  %>
		</td>
	<% end %>
		</tr>		

		<tr>
	<% if !@account.country.blank? %>
		<td>
			<strong>Pays</strong>
		</td>
		<td>
			<%= @account.country  %>
		</td>
	<% end %>
		</tr>			
		
		<tr>
	<% if !@account.tel.blank? %>
		<td>
			<strong>Téléphone</strong>
		</td>
		<td>
			<%= @account.tel  %>
		</td>
	<% end %>
		</tr>		

		<tr>		
	<% if !@account.fax.blank? %>
		<td>
			<strong>Fax</strong>
		</td>
		<td>
			<%= @account.fax  %>
		</td>
	<% end %>
		</tr>		

		<tr>		
	<% if !@account.email.blank? %>
		<td>
			<strong>Adresse e-mail</strong>
		</td>
		<td>
			<%= mail_to(@account.email)  %>
		</td>
	<% end %>
		</tr>	
		
		<tr>
	<% if !@account.web.blank? %>
		<td>
			<strong>Site Web</strong>
		</td>
		<td>
			<%= link_to @account.web, @account.web, :target => "_blank" %>
		</td>
	<% end %>
		</tr>		

		<tr>
	<% if !@account.category.blank? %>
		<td>
			<strong>Genre</strong>
		</td>
		<td>
			<%= @account.category %>
		</td>
	<% end %>
		</tr>

		<tr>
	<% if !@account.origin.nil? %>
		<td>
			<strong>Origine</strong>
		</td>
		<td>
			<%= @account.origin.name %>
		</td>
	<% end %>
		</tr>		

		<tr>
	<% if !@account.user.nil?%>
	<% if current_user.email == @account.user.email %>
		<% then %>
		<td>
			<strong>Collaborateur lié</strong>
		</td>
		<td>
			moi-même
		</td>
		<% else %>
		<td>
			<strong>Collaborateur lié</strong>
		</td>
		<td>
			<%= @account.user.full_name %> - <%= mail_to(@account.user.email) %>
		</td>
	<% end %>
	<% end %>
		</tr>

	<% if  !@account.accounting_code.blank? %>
		<td>
			<strong>Code comptable</strong>
		</td>
		<td>
			<%= @account.accounting_code %>
		</td>
	<% end %>
		</tr>
		
</tbody>
</table>	
		
		
	<% if !@account.notes.blank? %>
	<table class="table table-bordered table-striped">
	<tbody>
		<tr>
		<td colspan="2">
		<center><h4>Notes</h4></center>
		</td>
		</tr>
		<tr>
		<td>
		<div style="background-color: #fff; padding: 1px 15px;"> <%= simple_format(@account.notes , {}, :sanitize => false)%> </div>
		</td>
		</tr>
	</tbody>
	</table>
	<% end %>			
		
		
		
	<!-- OTHER INFO -->
		<table class="table table-bordered table-striped">
	<tbody>
		<tr>
		<td colspan="2">
		<center><h4>Informations complémentaires</h4></center>
		</tr>
		</td>
		<tr>
		<td><strong>Créé par</strong></td>
		<td><%= @account.author.full_name %>, le <%= @account.created_at.strftime("%d/%m/%y à %H:%M") %>
		</td>
		<% if !@account.modified_by.nil? %>
		<tr>
		<td><strong><abbr title="Dernière modification">Modifié par</abbr></strong></td>
		<td><%= @account.editor.full_name %>, le <%= @account.updated_at.strftime("%d/%m/%y à %H:%M") %></td>
		</tr>
		<% end %>		
<!-- END OTHER INFO -->
	
		
		
</tbody>
</table>
<hr/>	     
  <div class="row">
      <%= link_to image_tag("glyphicons/glyphicons_016_bin.png"), @account, :title => "Supprimer la tâche" , :confirm => 'Confirmer la suppression ?', :class =>"pull-right btn", :method => :delete %>    
  </div>	

