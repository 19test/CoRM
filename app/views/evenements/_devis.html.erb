<div class="container-fluid" style="margin-top: 1em;">
   

     <div class="well">
       <div class="row-fluid">
         <div class="span3">
           <h3>Liste des Devis</h3>
         </div>
         <div class="pull-right">
           <%= link_to image_tag("glyphicons/glyphicons_190_circle_plus.png"), new_devi_path(:compte_id => @compte.id) ,{:title => "Créer un devis"}%>
         </div>
       </div>
     </div>

         
</div>



<div class="container-fluid">
  
  <% if Devi.by_compte(@compte).blank? %>
    <h4> Aucun devis n'est rattaché à ce compte </h4>
  <% else %>
    
    <table class="table table-bordered table-striped">
      <tr>
        <th>Id</th>
        <th>Statut</th>
        <th>Référence</th>
        <th>Opportunité</th>
        <th>Total HT</th>
        <th>Date</th>
        <th>Editer</th>
        <th>Supp.</th>
        <th>PDF</th>         
      </tr>
    
    <% @devis = Devi.by_compte(@compte).order('date').page(params[:page]) %>
    <% @devis.each do |devi| %>
    <tr>
        <td><%= devi.id %></td>
        <td>
            <% if devi.statut == "Sauvegardé"%>
              <span class="badge badge-important">
            <% elsif devi.statut == "En cours"%>
              <span class="badge badge-warning">
            <% elsif devi.statut == "Accepté"%>
              <span class="badge badge-success">
            <% elsif devi.statut == "Refusé"%>
              <span class="badge badge-inverse">
            <% else %>
              <span class="badge badge-info">
            <% end %>
            <%= devi.statut %></span>
          </td>
        <td><%= devi.ref %></td>
        <td>
          <% if !devi.opportunite.nil? %>
            <%= link_to devi.opportunite.nom , devi.opportunite%>
          <% end %>
        </td>
        <td style="text-align :right;"><%= number_to_currency(devi.total_ht, :locale => :fr) %></td>
        <td><%= if !devi.date.nil? then devi.date.strftime("%d/%m/%Y") end%></td>
        <td><%= link_to image_tag("glyphicons/glyphicons_151_edit.png"), edit_devi_path(devi) %></td>
        <td><%= link_to image_tag("glyphicons/glyphicons_016_bin.png"), devi, :title => "Supprimer le devis", :confirm => 'Confirmer la suppression ?', :method => :delete %></td>          
        <td><%= link_to image_tag("glyphicons/glyphicons_015_print.png"), devi_path(devi, :format => "pdf") %></td>
    </tr>    
    <% end %>
    </table>
    
  <% end %>
  

    
</div>