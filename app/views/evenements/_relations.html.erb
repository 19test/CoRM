<div class="container-fluid" style="margin-top: 1em;">
   

     <div class="well">
       <div class="row-fluid">
         <div class="span3">
           <h3>Liste des Relations</h3>
         </div>
         <div class="pull-right">
           <%= link_to image_tag("glyphicons/glyphicons_190_circle_plus.png"), new_relation_path(:compte1_id => @compte.id) ,{:title => "Créer une relation"}%>
         </div>
       </div>
     </div>

         
</div>


<div class="container-fluid">
  
 <% if Relation.by_compte(@compte).blank? %>
  <h4> Aucune relation n'affectée à ce compte </h4>
 <% else %>

    <table class="table table-bordered table-striped">
      <tr>
        <th>Id</th>
        <th>Nom</th>
        <th>Compte lié</th>
        <th>Editer</th>
        <th>Supp.</th>  
      </tr>
    
    <% @relations = Relation.by_compte(@compte).order('nom').page(params[:page]) %>
    <% @relations.each do |relation| %>
      <tr>
        <td><%= relation.id %></td>
        <td style="width: 15em;"><%= relation.nom %></td>
        <td>
          <% if relation.compte2.id == @compte.id %>
            <%= link_to relation.compte1.societe, relation.compte1 %>
          <% else %>
            <%= link_to relation.compte2.societe, relation.compte2 %>
          <% end %>
        </td>
        <td><%= link_to image_tag("glyphicons/glyphicons_151_edit.png"), edit_relation_path(relation) %></td>
        <td><%= link_to image_tag("glyphicons/glyphicons_016_bin.png"), relation, :confirm => 'Confirmer la suppression ?', :method => :delete  %></td>
    <% end %>
    </table>
    
    <br />
    
    <%= paginate @relations %>
  <% end %>
  

  
</div>